generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==========================================
// USER & AUTH MODELS
// ==========================================

model User {
  id                  String    @id @default(uuid())
  email               String    @unique
  identityNumber      String?   @unique 
  password            String
  name                String
  role                Role      @default(EMPLOYEE)
  branchId            String?
  branch              Branch?   @relation(fields: [branchId], references: [id], onDelete: SetNull)
  
  // Security fields
  isActive            Boolean   @default(true)
  lastLoginAt         DateTime?
  passwordChangedAt   DateTime?
  failedLoginAttempts Int       @default(0)
  lockedUntil         DateTime?
  
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  // Relations
  sales            Sale[]
  tasks            Task[]
  commissionLogs   CommissionLog[]
  auditLogs        AuditLog[]
  refreshTokens    RefreshToken[]
  sentMessages     Message[]       @relation("SentMessages")
  receivedMessages Message[]       @relation("ReceivedMessages")
  notifications    Notification[]

  @@index([email])
  @@index([branchId])
  @@map("users")
}


enum Role {
  ADMIN
  MANAGER
  EMPLOYEE
  CUSTOMER
}

model Document {
  id        String   @id @default(uuid())
  filename  String
  path      String
  mimetype  String
  size      Int
  saleId    String
  sale      Sale     @relation(fields: [saleId], references: [id])
  uploadedAt DateTime @default(now())

  @@map("documents")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
  @@map("refresh_tokens")
}

// ==========================================
// BUSINESS MODELS
// ==========================================

model Branch {
  id        String   @id @default(uuid())
  name      String   @unique
  settings  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  users           User[]
  sales           Sale[]
  commissionRules CommissionRule[]
  messages        Message[]

  @@map("branches")
}

model PolicyType {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  sales           Sale[]
  commissionRules CommissionRule[]

  @@map("policy_types")
}

model Sale {
  id            String     @id @default(uuid())
  customerName  String
  customerPhone String?
  customerEmail String?
  policyNumber  String?    @unique
  amount        Decimal    @db.Decimal(12, 2)
  status        SaleStatus @default(LEAD)
  
  // Foreign Keys
  branchId      String
  branch        Branch     @relation(fields: [branchId], references: [id])
  employeeId    String
  employee      User       @relation(fields: [employeeId], references: [id])
  policyTypeId  String
  policyType    PolicyType @relation(fields: [policyTypeId], references: [id])
  
  // Dates
  saleDate      DateTime?
  startDate     DateTime?
  endDate       DateTime?
  
  // Additional Info
  cancelReason  String?
  notes         String?
  
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  // Relations
  commissionLogs CommissionLog[]
  documents      Document[]

  @@index([branchId])
  @@index([employeeId])
  @@index([policyTypeId])
  @@index([status])
  @@index([saleDate])
  @@map("sales")
}

enum SaleStatus {
  LEAD
  OFFER
  ACTIVE
  CANCELLED
}

// ==========================================
// TASKS & WORKFLOW
// ==========================================

model Task {
  id           String   @id @default(uuid())
  title        String
  description  String?
  dueDate      DateTime
  isCompleted  Boolean  @default(false)
  priority     Priority @default(MEDIUM)
  
  assignedToId String
  assignedTo   User     @relation(fields: [assignedToId], references: [id], onDelete: Cascade)
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([assignedToId])
  @@index([dueDate])
  @@index([isCompleted])
  @@map("tasks")
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

// ==========================================
// COMMISSION SYSTEM
// ==========================================

model CommissionRule {
  id           String      @id @default(uuid())
  name         String
  description  String?
  
  // Targeting (optional filters)
  branchId     String?
  branch       Branch?     @relation(fields: [branchId], references: [id], onDelete: Cascade)
  policyTypeId String?
  policyType   PolicyType? @relation(fields: [policyTypeId], references: [id], onDelete: Cascade)
  
  // Rule Logic
  conditions   Json        // { minAmount: 5000, maxAmount: 50000 }
  formula      String      // "ratio:0.15" or "raw:500"
  
  // Validity
  validFrom    DateTime
  validTo      DateTime?
  isActive     Boolean     @default(true)
  
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([branchId])
  @@index([policyTypeId])
  @@index([validFrom])
  @@index([validTo])
  @@index([isActive])
  @@map("commission_rules")
}

model CommissionLog {
  id         String   @id @default(uuid())
  amount     Decimal  @db.Decimal(12, 2)
  isPaid     Boolean  @default(false)
  paidAt     DateTime?
  
  saleId     String
  sale       Sale     @relation(fields: [saleId], references: [id], onDelete: Cascade)
  
  employeeId String
  employee   User     @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  
  createdAt  DateTime @default(now())

  @@index([saleId])
  @@index([employeeId])
  @@index([isPaid])
  @@map("commission_logs")
}

// ==========================================
// AUDIT & LOGGING
// ==========================================

model AuditLog {
  id         String   @id @default(uuid())
  action     String   // LOGIN, LOGOUT, CREATE, UPDATE, DELETE
  resource   String   // User, Sale, Commission, etc.
  resourceId String?
  details    Json?    // Additional context
  ipAddress  String?
  userAgent  String?
  
  userId     String?
  user       User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([resource])
  @@index([createdAt])
  @@map("audit_logs")
}
model Message {
  id         String   @id @default(uuid())
  content    String
  isRead     Boolean  @default(false)
  
  senderId   String
  sender     User     @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  
  receiverId String
  receiver   User     @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: Cascade)
  
  branchId   String?
  branch     Branch?  @relation(fields: [branchId], references: [id], onDelete: SetNull)
  
  createdAt  DateTime @default(now())

  @@index([senderId])
  @@index([receiverId])
  @@index([branchId])
  @@index([createdAt])
  @@map("messages")
}

model Notification {
  id        String   @id @default(uuid())
  title     String
  content   String
  type      String   // MESSAGE, TASK, SYSTEM, etc.
  isRead    Boolean  @default(false)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
  @@map("notifications")
}
